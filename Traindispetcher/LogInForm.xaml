<Window x:Name="LogInForm1" x:Class="Traindispetcher.LogInForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Traindispetcher"
        mc:Ignorable="d"
        Title="Авторизація" Height="120" Width="240" WindowStyle="ToolWindow" KeyDown="LogInForm_KeyDown" Closed="LogInForm_Closed">
    <Grid>
        <Label x:Name="logLabel" Content="Логін" Height="Auto" Width="Auto" HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="logTextBox" Height="20" Width="80" HorizontalAlignment="Left" Margin="80,20,0,0" VerticalAlignment="Top"/>
        <Label x:Name="passwordLabel" Content="Пароль" Height="Auto" Width="Auto" HorizontalAlignment="Left" Margin="15,45,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="passwordTextBox" Height="20" Width="80" HorizontalAlignment="Left" Margin="80,50,0,0" VerticalAlignment="Top"/>
        <Button x:Name="OkButton" Content="Вхід" Height="20" Width="40" HorizontalAlignment="Right" Margin="0,0,5,5" VerticalAlignment="Bottom" Click="OkButton_Click"/>
    </Grid>
</Window>
